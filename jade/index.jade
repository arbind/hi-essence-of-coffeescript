extends layout

block head
  link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Open+Sans:700')
  link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Bitter:400,700,400italic')
  link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Source+Code+Pro')
  link(rel='stylesheet', type='text/css', href='./css/jq-console/jq.css')
  link(rel='stylesheet', type='text/css', href='./css/style.css')

  script(type='text/javascript', src="./js/vendor/jqconsole.min.js")
  script(type="text/javascript", src="http://d1n0x3qji82z53.cloudfront.net/src-min-noconflict/ace.js", charset="utf-8")

  script(type='text/coffeescript', src='./coffee/essence-of-coffeescript.coffee')
  script(type='text/coffeescript', src='./coffee/jquery.essence-of-coffeescript.coffee')
  script(type='text/coffeescript', src='./coffee/console/console.coffee')
  script(type='text/coffeescript', src='./coffee/editor/editor.coffee')
  script(type='text/coffeescript', src='./coffee/editor/javascript-editor.coffee')
  script(type='text/coffeescript', src='./coffee/editor/coffeescript-editor.coffee')
  script(type='text/coffeescript', src='./coffee/exercise.coffee')
  script(type='text/coffeescript', src='./coffee/lesson-plan.coffee')
  script(type='text/coffeescript', src='./coffee/course.coffee')

block content
  script(type='text/template', id='course-template')
    section
      header.centered
        p.section-name - tutorial -
        h1 Essence of CoffeeScript: Syntax Shortcuts
      .course.centered
        .header
          a.by-carbon-five c5
          nav.lesson
            p.section-name - lessons -
            ol
          h2.lesson

        .exercise-container
          .header
            h3.realization Punctuation is optional, so skip it ;}),
            a.next Next
          nav.exercise
            p.section-name - exercises -
            ul
          section.exercise-spot 
        .footer
          a.next Next


  script(type='text/template', id='exercise-template')
    .exercise
      .js-syntax
        h4 JavaScript Syntax
        .editor 
          .js-syntax-editor
               
      .coffee-syntax
        h4 CoffeeScript Syntax
        .editor 
          .coffee-syntax-editor

      .example-code 
        h4 Example CoffeeScript
        .editor 
          .example-code-editor   

      .instructions 
        h4 Practice
        ol

      .given-code 
        h4 Given the following code
        .editor 
          .given-code-editor

      .user-code 
        h4 Hack in CoffeeScript:
        .editor 
          .user-code-editor
        input.run-users-hack(type='submit', value='Run')
      .user-console

  include course/course

  #course-spot
  #social-toolbar.centered
    .twitter
      include ./social/twitter/tweet-button
    .facebook
      include ./social/facebook/fb-recommend-button


  script(type='text/coffeescript').
    $ = jQuery
    $ ->course = new EssenceOfCoffeeScript.Course elSpot: '#course-spot'

  script(type='text/javascript', src='./js/vendor/coffee-script.js')